<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!--
// {{ ansible_managed }}
-->

<configuration>
  <property>
    <name>hbase.master.port</name>
    <value>{{ hbase_master_port }}</value>
  </property>

  <property>
    <name>hbase.regionserver.port</name>
    <value>{{ hbase_regionserver_port }}</value>
  </property>

  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>{{ hbase_zookeeper_quorum_hosts | join(',') }}</value>
  </property>

  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>

  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://{{ hbase_namenode_hostname }}:8020{{ hbase_hdfs_root_dir }}</value>
  </property>

  {% for property, value in hbase_extra_properties.items() %}
  <property>
    <name>{{ property }}</name>
    <value>{{ value }}</value>
  </property>
  {% endfor %}
</configuration>
